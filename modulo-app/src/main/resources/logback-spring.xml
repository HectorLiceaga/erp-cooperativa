<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Variable para definir dónde se guardan los logs -->
    <!-- Cambiar esta ruta en el servidor de producción -->
    <property name="LOGS_DIR" value="./logs" />

    <!--
      Appender para la CONSOLA
      (lo que vemos al correr en el IDE)
    -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{ISO8601} %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <!--
      Appender para ARCHIVO (Rotativo)
      (lo que usaremos en producción)
    -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}/erp-cooperativa.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rota diariamente -->
            <fileNamePattern>${LOGS_DIR}/archived/erp-cooperativa-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!--
      Configuración de NIVELES de Log
    -->

    <!-- Log de Spring (INFO) -->
    <logger name="org.springframework" level="info" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </logger>

    <!-- Log de Hibernate (WARN) -->
    <logger name="org.hibernate" level="warn" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </logger>

    <!-- Log de NUESTRO CÓDIGO (DEBUG) -->
    <!-- Todo lo que esté en "com.cooperativa.erp" logueará en DEBUG -->
    <logger name="com.cooperativa.erp" level="debug" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </logger>

    <!-- Log ROOT (Default para todo lo demás) -->
    <root level="info">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </root>

</configuration>
