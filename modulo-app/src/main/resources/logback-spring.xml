<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Variable para definir dónde se guardan los logs -->
    <property name="LOGS_DIR" value="./logs" />

    <!-- Appender para la CONSOLA -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{ISO8601} %highlight(%-5level) [%blue(%t)] %yellow(%C{1}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <!--
      Appender para ARCHIVO (Rotativo - Solo por Tiempo)
    -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- El archivo actual siempre se llamará erp-cooperativa.log -->
        <file>${LOGS_DIR}/erp-cooperativa.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rota diariamente y comprime el archivo viejo -->
            <!-- SIMPLIFICADO: Eliminamos el %i -->
            <fileNamePattern>${LOGS_DIR}/archived/erp-cooperativa-%d{yyyy-MM-dd}.log.gz
            </fileNamePattern>
            <!-- SIMPLIFICADO: Eliminamos la política SizeAndTimeBasedFNATP -->
            <!-- Opcional: <maxHistory>30</maxHistory> para guardar logs por 30 días -->
        </rollingPolicy>
    </appender>

    <!-- Configuración de NIVELES de Log -->

    <logger name="org.springframework" level="info" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </logger>

    <logger name="org.hibernate" level="warn" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </logger>

    <logger name="com.cooperativa.erp" level="debug" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </logger>

    <root level="info">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </root>

</configuration>

